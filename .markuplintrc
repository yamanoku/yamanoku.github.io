{
  "rules": {
    "no-hard-code-id": false
  },
  "extends": [
    "markuplint:html-standard",
    "markuplint:a11y",
    "markuplint:recommended-vue"
  ],
  "parser": {
    ".vue$": "@markuplint/vue-parser"
  },
  "parserOptions": {
    "authoredElementName": ["nuxt"]
  },
  "specs": ["@markuplint/vue-spec"],
  "excludeFiles": ["./node_modules/**/*"]
}
