    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "gh-pages": "6.3.0",
    "markuplint": "4.11.6"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "pnpm": "10.4.1",
    "npm": "please_use_pnpm_instead"
  },
  "packageManager": "pnpm@10.4.1"
