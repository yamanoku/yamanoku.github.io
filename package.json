{
  "name": "yamanoku.github.io",
  "author": "yamanoku <0910yama@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "dev:astro": "astro dev",
    "build": "nuxt build",
    "build:astro": "astro build",
    "preview:astro": "astro preview",
    "generate": "nuxt generate",
    "lint": "yarn eslint && yarn markuplint",
    "eslint": "eslint --ext .ts,.astro --ignore-path .gitignore .",
    "eslint:fix": "eslint --fix --ext .ts,.astro --ignore-path .gitignore .",
    "markuplint": "markuplint 'dist/**/*.html'",
    "prettier": "yarn prettier:ts && yarn prettier:astro",
    "prettier:ts": "prettier --check 'src/**/*.ts'",
    "prettier:astro": "prettier --check 'src/**/*.astro'",
    "deploy": "gh-pages -d dist -b main -m 'chore: deploy [skip ci]' -t"
  },
  "dependencies": {
    "@nuxtjs/i18n": "7.3.1",
    "astro": "1.9.2",
    "js-yaml-loader": "1.2.2",
    "modern-normalize": "1.1.0",
    "nuxt": "2.15.8",
    "style-loader": "3.3.1"
  },
  "devDependencies": {
    "@markuplint/vue-parser": "3.1.0",
    "@markuplint/vue-spec": "3.1.0",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "eslint": "8.31.0",
    "eslint-plugin-astro": "0.21.1",
    "gh-pages": "4.0.0",
    "markuplint": "3.1.0",
    "prettier": "2.8.2",
    "prettier-plugin-astro": "0.7.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
