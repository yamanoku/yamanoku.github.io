{
  "name": "yamanoku.github.io",
  "author": "yamanoku <0910yama@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "pnpm run biome && pnpm run markuplint",
    "biome": "biome check --write .",
    "biome:ci": "biome ci .",
    "markuplint": "markuplint 'dist/**/*.html'",
    "yama-normalize": "pnpm -C packages/yama-normalize",
    "deploy": "gh-pages -d dist -b main -m 'chore: deploy [skip ci]' -t"
  },
  "dependencies": {
    "@tailwindcss/vite": "catalog:website",
    "astro": "catalog:website",
    "modern-normalize": "catalog:website",
    "tailwindcss": "catalog:website"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:website",
    "gh-pages": "catalog:website",
    "markuplint": "catalog:website"
  },
  "pnpm": {
    "packageExtensions": {
      "@eslint/css": {
        "peerDependencies": {
          "@types/css-tree": "2.3.10"
        }
      }
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "es5-ext",
      "esbuild",
      "sharp"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "pnpm": "10.18.0",
    "npm": "please_use_pnpm_instead"
  },
  "packageManager": "pnpm@10.18.0"
}
