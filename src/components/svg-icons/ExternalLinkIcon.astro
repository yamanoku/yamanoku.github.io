---
import { useTranslations } from "../../i18n/util";
const t = useTranslations(Astro);
---

<svg
  role="img"
  aria-label={t("icon-label.external-link")}
  width="24"
  height="24"
  viewBox="0 0 24 24"
>
  <title>{t("icon-title.external-link")}</title>
  <path class="open_new-1" d="M0 0h24v24H0z" fill="none"></path>
  <path
    class="open_new-2"
    d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"
  ></path>
</svg>

<style>
  svg {
    width: 12px;
    height: 12px;
    margin: 0 0 -1px 4px;
  }
  svg path {
    fill: var(--y-black-base);
  }
  @media (prefers-color-scheme: dark) {
    svg path {
      fill: var(--y-white-base);
    }
  }
  svg .open_new-1 {
    fill: none;
  }
</style>
